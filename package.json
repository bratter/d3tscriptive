{
  "name": "d3tscriptive",
  "version": "0.0.1",
  "description": "D3(T)Scriptive - D3-based charts and components in Typescript",
  "license": "MIT",
  "scripts": {
    "build:dist": "webpack",
    "build:demos": "webpack --env.output=demos",
    "start": "webpack-dev-server --env.output=demos",
    "test": "jest --watch",
    "test:once": "jest --coverage"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper" :{
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.test.json"
      }
    }
  },
  "dependencies": {
    "d3": "^5.0.0"
  },
  "devDependencies": {
    "@types/d3": "^5.0.0",
    "@types/jest": "^22.2.2",
    "@types/node": "^9.4.7",
    "bootstrap": "^4.0.0",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "handlebars": "^4.0.11",
    "handlebars-loader": "^1.7.0",
    "html-webpack-include-assets-plugin": "^1.0.4",
    "html-webpack-plugin": "^3.0.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.3",
    "jquery": "^3.3.1",
    "node-sass": "^4.7.2",
    "popper.js": "^1.14.1",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.3",
    "ts-jest": "^22.4.2",
    "ts-loader": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.12",
    "webpack-dev-server": "^3.1.1",
    "webpack-merge": "^4.1.2"
  }
}
