{
  "name": "d3tscriptive",
  "version": "0.0.1",
  "description": "D3(T)Scriptive - D3-based components built with Typescript",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf ./build & tsc",
    "test": "jest --watch",
    "test:once": "jest",
    "test:coverage": "jest --coverage",
    "install:peers": "install-peers -f"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageDirectory": "coverage",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "peerDependencies": {
    "d3": "^5.7.0"
  },
  "devDependencies": {
    "@types/d3": "^5.7.0",
    "@types/jest": "^24.0.25",
    "@types/node": "^13.1.1",
    "install-peers-cli": "^2.2.0",
    "jest": "^24.9.0",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "tslint": "^5.9.1",
    "typescript": "^3.7.4"
  }
}
